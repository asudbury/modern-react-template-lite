npm run prettier && \
npm run test && \
npm run lint && \
npm run build

status=$?

if [ $status -ne 0 ]; then
	echo ""
	echo "âŒ Commit blocked by Husky pre-commit hook."
	echo "   One of: prettier, tests, lint, build, or docs failed."
	echo "   Scroll up to see the exact errors (e.g. ESLint output),"
	echo "   fix them, then run: git commit again."
	exit $status
fi
